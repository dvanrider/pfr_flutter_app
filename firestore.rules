rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get user role from users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    // Users collection - all authenticated can read, write restrictions apply
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
        (request.auth.uid == userId || isAdmin());
    }

    // Pre-registrations collection
    match /preregistrations/{email} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Config collection - all authenticated can read
    match /config/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Role permissions collection - all authenticated can read, admins can write
    match /role_permissions/{roleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Projects collection - all authenticated can read
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();

      // Subcollections
      match /{subcollection}/{docId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Comments collection - all authenticated can read/create, owners can update/delete
    match /comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        (request.auth.uid == resource.data.userId || isAdmin());
    }

    // Notifications collection - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
        request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        request.auth.uid == resource.data.userId;
      allow delete: if isAuthenticated() &&
        (request.auth.uid == resource.data.userId || isAdmin());
    }

    // Attachments collection - all authenticated can read/create, owners can delete
    match /attachments/{attachmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (request.auth.uid == resource.data.uploadedByUserId || isAdmin());
      allow delete: if isAuthenticated() &&
        (request.auth.uid == resource.data.uploadedByUserId || isAdmin());
    }

    // Project templates collection - all authenticated can read, admins can write
    match /project_templates/{templateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (request.auth.uid == resource.data.createdByUserId || isAdmin());
      allow delete: if isAuthenticated() &&
        (!resource.data.isSystemTemplate &&
         (request.auth.uid == resource.data.createdByUserId || isAdmin()));
    }
  }
}
